import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
print("Libraries imported successfully")
file_path = r"C:\Users\DELL\Desktop\ANAS EXCEL\creditcard\creditcard.zip"
df = pd.read_csv(file_path)
print("Dataset loaded successfully")
print("\nFirst 5 Rows:")
print(df.head())
print("\nDataset Shape:")
print(df.shape)
print("\nDataset Info:")
print(df.info())
print("\nStatistical Summary:")
print(df.describe())
print("\nMissing Values:")
print(df.isnull().sum())
duplicate_rows = df.duplicated().sum()
print("\nDuplicate Rows:", duplicate_rows)
df.drop_duplicates(inplace=True)
print("\nFraud vs Non-Fraud Count:")
print(df['Class'].value_counts())
plt.figure()
df['Class'].value_counts().plot(kind='bar')
plt.title("Fraud vs Non-Fraud Transactions")
plt.xlabel("Class (0 = Normal, 1 = Fraud)")
plt.ylabel("Count")
plt.tight_layout()
plt.savefig("fraud_count.png")
plt.show()
plt.figure()
plt.hist(df['Amount'], bins=50)
plt.title("Transaction Amount Distribution")
plt.xlabel("Amount")
plt.ylabel("Frequency")
plt.tight_layout()
plt.savefig("amount_distribution.png")
plt.show()
plt.figure()
sns.boxplot(x='Class', y='Amount', data=df)
plt.title("Transaction Amount by Class")
plt.tight_layout()
plt.savefig("amount_by_class.png")
plt.show()
plt.figure(figsize=(10, 8))
sns.heatmap(df.corr(), cmap="coolwarm")
plt.title("Correlation Heatmap")
plt.tight_layout()
plt.savefig("correlation_heatmap.png")
plt.show()
print("\nKEY INSIGHTS:")
print("1. Fraud transactions are extremely rare compared to normal transactions.")
print("2. Most fraud transactions involve relatively smaller amounts.")
print("3. Dataset is highly imbalanced, which is important for analysis and modeling.")
output_path = r"C:\Users\DELL\Desktop\ANAS EXCEL\creditcard\cleaned_creditcard.csv"
df.to_csv(output_path, index=False)
print("\nPROJECT COMPLETED SUCCESSFULLY")
